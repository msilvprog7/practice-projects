generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Poll {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  question  String
  answers   Answer[]
}

model Answer {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  text      String
  votes     Int       @default(0)
  pollId    Int
  poll      Poll      @relation(fields: [pollId], references: [id], onDelete: Cascade)
}
